<div class="login">
  <section class="shadow">
  <h1>Thriftory</h1>
  <%= image_tag("saletag.png", class:"logo", :alt => "logo", height:'200', width: '200') %>

  <%= form_tag login_path, class: "form-signin" do %>
    <h3 class="form-signin-heading">Please sign in</h3>

    <label for="inputEmail" class="sr-only"></label>
    <%= text_field_tag :email, '', class: 'form-control', id: 'inputEmail', placeholder: 'Email Address', required: true %>

    <%= label_tag 'Password', '', class: 'sr-only' %>
    <%= password_field_tag :password, '', class: 'form-control', id: 'inputPassword', placeholder: 'Password', required: true %>

    <%= submit_tag "Submit", class: 'btn btn-lg btn-warning btn-block' %>
    <%= link_to('Add new account', new_user_path, class: 'btn btn-lg btn-warning btn-block') %>

  <% end %>
  </section>
</div>
