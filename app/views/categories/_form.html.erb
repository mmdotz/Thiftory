<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Category name" %><br>
    <%= f.text_field :name %>
    <p> new categories trigger creation of subcats</p>
  </div>

  <%= f.fields_for :subcat1s do |sc| %>
    <div class="field">
      <%= sc.label "Subcategory 1 name" %><br>
      <%= sc.text_field :name %>
    </div>

    <%= sc.fields_for :subcat2s do |sc2| %>
      <div class="field">
        <%= sc2.label "Subcategory 2 name" %><br>
        <%= sc2.text_field :name %>
      </div>
    <% end %>
  <% end %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
