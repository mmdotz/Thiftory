<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <p><strong>Photo for Item #<%= @item.id %></strong><%= f.label @item.description %></p>
  </div>
  <div class="field">
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.label "Image upload" %><br>
    <%= f.attachment_field :image, direct: true %>
    <!--immediate file upload, don't wait for submit -->
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
