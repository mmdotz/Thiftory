
<div class= container>
  <%= form_for(@item) do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %>
          prohibited this item from being saved:</h2>

        <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.select :category_id,
        options_from_collection_for_select(@categories, :id, :name, (@item.subcat2.subcat1.category.id if @item.persisted?) ), { prompt: 'Select a Category'}, { id: 'categories_select' } %>`
    <div class="field">
      <%= f.select :subcat1_id,
        options_from_collection_for_select(@subcat1s, :id, :name, (@item.subcat2.subcat1.id if @item.persisted?) ), { prompt: 'Select 1st Subcategory'}, { id: 'subcat1s_select' } %>`
    </div>
    <div class="field">
      <%= f.select :subcat2_id,
        options_from_collection_for_select(@subcat2s, :id, :name, (@item.subcat2.id if @item.persisted?) ), { prompt: 'Select 2nd Subcategory'}, { id: 'subcat2s_select' } %>`
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: 2 %>
    </div>
    <div class="field">
      <%= f.label :quantity %><br>
      <%= f.number_field :quantity %>
    </div>
    <div class="field">
      <%= f.label :shipping %><br>
      <%= f.text_field :shipping %>
    </div>
    <div class="field">
      <%= f.label :storage_loc %><br>
      <%= f.text_field :storage_loc %>
    </div>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.text_field :status %>
    </div>
    <div class="field">
      <%= f.label :condition %><br>
      <%= f.text_field :condition %>
    </div>
    <div class="field">
      <%= f.label :source_id %><br>
      <%= f.text_field :source_id %>
    </div>

<!--f is parent of p so f.fields iterates over all p and f.submit captures all p -->

    <%= f.fields_for :finances do |p| %>
      <div class="field">
        <%= p.label :procure_cost %><br>
        <%= p.text_field :procure_cost, placeholder:"Procurement cost", class: "form-control" %>
      </div>
      <div class="field">
        <%= p.label :shipping_cost %><br>
        <%= p.text_field :shipping_cost, placeholder:"Shipping paid", class: "form-control" %>
      </div>
      <div class="field">
        <%= p.label :pre_sale_cost %><br>
        <%= p.text_field :pre_sale_cost, placeholder:"Pre-sale cost total", class: "form-control" %>
      </div>
      <div class="field">
        <%= p.label :buyer_pmt %><br>
        <%= p.text_field :buyer_pmt, placeholder:"Buyer Pmt", class: "form-control" %>
      </div>
    <% end %>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
