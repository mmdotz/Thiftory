<!-- Item show-->
<br>
<!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Large modal</button> -->

<div class="modal fade bs-example-modal-lg" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <strong>Picture:</strong>
        <%= image_tag attachment_url(@item.photos.first, :image, :fill, 30, 30, format: :jpg) %>
      </p>
      <div class='photos'>
        <% @item.photos.each do |photo| %>
          <%= link_to photo do %>
            <%= image_tag attachment_url(photo, :image, :fill, 100, 100, format: :jpg) %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-1" id="firstphoto">
      <% if @item.photos.empty? %>
        <%= link_to 'Add photos', new_photo_path(item_id: params[:id]), class: "btn btn-default" %>
      <% else %>
        <%= image_tag attachment_url(@item.photos.first, :image, :fill, 400, 400, format: :jpg) %>
        <p> Click on a photo to view or delete it. Add delete action to each modal pop</p>
      <% end %>
    </div>
    <div class="col-md-4 col-md-offset-1" id="item_attr">
      <h3><%= @item.description.titleize %></h3><br>
      <ul>
        <li><strong>Quantity: </strong><%= @item.quantity %></li>
        <li><strong>Storage spot: </strong><%= @item.storage_loc %></li>
        <li><strong>Status: </strong><%= @item.status %></li>
        <li><strong>Condition: </strong><%= @item.condition %></li>
        <li><strong>Source: </strong><%= @item.source.name %><li>
        <li><strong>Buyer Pmt: $</strong><% @item.finances.each do |finance| %>
          <%= finance.buyer_pmt %></li>
        <% end %>

        <% if @item.status.downcase == "sold" %>
          <li><strong>Shipping: </strong>
          <%= @item.shipping %></li><br>
          <% @item.finances.each do |finance| %>
            <% if @item.shipping.downcase == "free" %>
              <li><strong>Shipping paid: $</strong>
              <%= finance.shipping_cost %></li><br>
              <li><strong>Sold for : $</strong>
              <%= finance.buyer_pmt %></li>
            <% end %>
          <% end %>
        <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-3 col-md-offset-1" id="photos">
      <% @item.photos.each do |photo| %>
        <%= link_to photo do %>
          <%= image_tag attachment_url(photo, :image, :fill, 100, 100, format: :jpg) %>
        <% end %>
      <% end %>
    </div>
    <br>
    <div class="link-tos">
      <div class="col-md-3 col-md-offset-3">
      <%= link_to 'Add photos', new_photo_path(item_id: params[:id]) %> |
      <%= link_to 'Destroy', item_path(@item), method: :delete, data: { confirm: 'Are you sure?' } %> |
      <%= link_to 'Edit', edit_item_path(@item) %> |
      <%= link_to 'Back', items_path %>
    <div>
  </div>
</div>
