<div class="container">
  <h1>Revenue + Expenses</h1>
  <table class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Item #</th>
          <th>Description</th>
          <th>Procure cost</th>
          <th>Shipping cost</th>
          <th>Pre-sale cost</th>
          <th>Buyer pmt</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @finances.each do |finance| %>
          <tr>
            <td><%= finance.item.id %></td>
            <td><%= finance.item.description %></td>
            <td><%= finance.procure_cost %></td>
            <td><%= finance.shipping_cost %></td>
            <td><%= finance.pre_sale_cost %></td>
            <td><%= finance.buyer_pmt %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </table>
</div>
