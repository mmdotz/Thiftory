<h1>Costs per Item</h1>

<table>
  <thead>
    <tr>
      <th>Item #</th>
      <th>Item</th>
      <th>Procure cost</th>
      <th>Shipping cost</th>
      <th>Pre-sale notes</th>
      <th>Pre-sale cost</th>
      <th>Buyer pmt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @finances.each do |finance| %>
      <tr>
        <td><%= finance.item.id %></td>
        <td><%= finance.item.description %></td>
        <td><%= finance.procure_cost %></td>
        <td><%= finance.shipping_cost %></td>
        <td><%= finance.pre_sale_notes %></td>
        <td><%= finance.pre_sale_cost %></td>
        <td><%= finance.buyer_pmt %></td>
        <td><%= link_to 'Show', finance %></td>
        <td><%= link_to 'Edit', edit_finance_path(finance) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
